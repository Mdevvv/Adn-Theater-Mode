{
    "manifest_version": 3,
    "name": "Adn Theater Mode",
    "version": "1.0",
    "description": "Animation Digital Network Theater Mode.",
    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ],
    "icons": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "action": {
    
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
      }
    },
    "host_permissions": [
      "https://animationdigitalnetwork.fr/video/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://animationdigitalnetwork.fr/video/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "author": "contact@septmg.fr",
    "homepage_url": "https://septmg.fr"
  }
  